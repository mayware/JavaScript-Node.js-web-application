<!DOCTYPE html>
<html lang="en">
<!-- Head tag replaced with the ejs template -->
<%- include('./partials/head.ejs') %>

<body>
<%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>Home page</h2>
    <h3>All Blogs</h3>
    <% if(blogz.length> 0) { %>
        <% blogz.forEach(blog=> { %>
            <h3 class="title">
                <%= blog.title %>
            </h3>
            <p class="snippet">
                <%= blog.snippet %>
            </p>
            <% }) %>
                <% } else { %>
                    <p>There are no blogs to display</p>
                    <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>

</html>